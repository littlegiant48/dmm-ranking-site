name: Build and Deploy to GitHub Pages
on:
  push:
    branches:
      - main
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
      - uses: actions/configure-pages@v5        # ← Pages を有効化
      - name: Build site
        run: python update.py                   # あなたのスクリプト
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./output
      - name: Deploy
        id: deployment
        uses: actions/deploy-pages@v4
        permissions:
          pages: write
          id-token: write
